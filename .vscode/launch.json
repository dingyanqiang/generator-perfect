{
  /*
    1. config launch.json
    2. node --debug-brk ./node_modules/yo/lib/cli.js perfect
    */
  "version": "0.1.8",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "perfect",
      "program": "${workspaceFolder}/node_modules/yo/lib/cli.js",
      "args": [
        "perfect",
        "--skip-install"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "perfect:page",
      "program": "${workspaceFolder}/node_modules/yo/lib/cli.js",
      "args": [
        "perfect:page"
      ],
      "stopOnEntry": false,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "perfect:component",
      "program": "${workspaceFolder}/node_modules/yo/lib/cli.js",
      "args": [
        "perfect:component"
      ],
      "stopOnEntry": false,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "perfect:util",
      "program": "${workspaceFolder}/node_modules/yo/lib/cli.js",
      "args": [
        "perfect:util"
      ],
      "stopOnEntry": false,
      "console": "integratedTerminal"
    }
  ]
}